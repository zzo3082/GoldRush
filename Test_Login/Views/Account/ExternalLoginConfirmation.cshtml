@model Test_Login.Models.ExternalLoginConfirmationViewModel
@using Test_Login.Models.Extensions;


@{
    ViewBag.Title = "註冊";
}


<h2 class="text-center">@ViewBag.Title</h2>
<h3 class="text-center">關聯您的 @ViewBag.LoginProvider 帳戶。</h3>

<div class="container">
    <div class="row justify-content-center">
        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

          
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="text-info">
                您已成功以 <strong>@ViewBag.LoginProvider</strong>。
                請在下面輸入此網站的使用者名稱，然後按一下 [註冊] 按鈕完成
                登入。
            </p>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = " control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NickName, new { @class = " control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.NickName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md text-center">
                    <input type="submit" class="btn btn-outline-primary" value="註冊" style="font-size:18px;" />
                </div>
            </div>
        }


    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
