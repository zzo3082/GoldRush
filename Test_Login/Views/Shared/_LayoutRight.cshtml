                                    <a class="nav-link text-uppercase " data-toggle="none" href="/BackTesting/BackTesting001">
                                        回測:
                                        定期定額(定股)
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-uppercase " data-toggle="none" href="/Home/Message">
                                        討論區
                                    </a>

                                </li>
                            </ul>
                            <div class="navbar-spacer"></div>
                            <a class="btn btn-outline-warning text-uppercase" href="/stocks/Strategy" data-toggle="none" target="">
                                開始發掘
                            </a>

                            <div class="navbar-spacer"></div>
                            <div class="navbar-spacer"></div>

                            @{
                                try
                                {
                                    @Html.Action("SearchBox", "Home")
                                    @*<form>
