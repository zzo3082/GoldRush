@using Microsoft.AspNet.Identity
@using Test_Login.Models.Extensions;

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item " style="font-size:10px;">
                <a href="#">
                    <span class="text-uppercase">
                        @Html.ActionLink("您好 " + User.Identity.GetNickName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "text-white" })
                    </span>
                </a>
            </li>
            <li class="nav-item " style="font-size:10px;"><a href="javascript:document.getElementById('logoutForm').submit()" class="text-white">登出</a></li>
        </ul>
    }
}
else
{

    <ul class="navbar-nav">
        <li class="nav-item " style="font-size:10px;">
            <span class="text-uppercase ">
                @Html.ActionLink("註冊", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "text-white" })
            </span>
        </li>
        <li class="nav-item" style="font-size:10px;">
            <span class="text-uppercase">
                @Html.ActionLink("登入", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "text-white" })
            </span>
        </li>
    </ul>
}
